<h1>投稿一覧</h1>

<table>
  <tr>
    <th>イメージ</th>
    <th>内容</th>
    <th>ユーザ名</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= image_tag (picture.image.url), width: 100 if picture.image && picture.image.url %></td>
    <td><%= picture.content %></td>
    <td><%= picture.user.name %></td>
    <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
    <% if picture.user == current_user %>
    <td><%= link_to '編集する', edit_picture_path(picture.id) %></td>
    <td><%= link_to '削除する', picture_path(picture.id), method: :delete %></td>
  </tr>
  <% end %>
<% end %>
</table>

<%= link_to 'お気に入り一覧', favorites_path %>
<%= link_to '新たに投稿する', new_picture_path %>
